<SourcesScreen>:
    id: source_screen
    padding: dp(14)
    spacing: dp(16)
    BoxLayout:
        spacing: dp(16)
        orientation: 'vertical'
        size_hint_x: .75
        BoxLayout:
            spacing: dp(8)
            size_hint_y: .5
            orientation: 'vertical'
            ShadowBox:
                radius: [dp(14)]
                elevation: 1
                orientation: 'vertical'
                spacing: dp(8)
                padding: dp(12)
                BoxLayout:
                    spacing: dp(8)
                    size_hint_y: None
                    height: dp(42)
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: dp(8)
                        size_hint_x: .8
                        Text:
                            text: 'Sources File Browser'
                            font_size: app.fonts.size.h2
                            color: app.colors.secondary
                            font_name: app.fonts.heading
                        Text:
                            text: 'Select a source file for more information.'
                            font_size: app.fonts.size.h6
                            color: app.colors.secondary
                            font_name: app.fonts.subheading
                            size_hint_y: None
                            height: dp(18)
                    AnchorLayout:
                        size_hint_x: .2

                TabbedPanel:
                    do_default_tab: False
                    TabbedPanelItem:
                        text: 'List View'
                        BoxLayout:
                            orientation: 'vertical'
                            SPAFileChooserList:
                                id: file_chooser
                                source_screen: source_screen
                    TabbedPanelItem:
                        text: 'Icon View'
                        BoxLayout:
                            orientation: 'vertical'
                            SPAFileChooserIcon:
                                source_screen: source_screen
                                filter_dirs: True
    BoxLayout:
        size_hint_x: .25
        size_hint_y: 1
        orientation: 'vertical'
        ShadowBox:
            radius: [dp(14)]
            elevation: 1
            orientation: 'vertical'
            spacing: dp(8)
            size_hint_y: .50
            padding: dp(12)

            Text:
                text: 'Selected File Options'
                font_size: app.fonts.size.h6
                color: app.colors.secondary
                font_name: app.fonts.subheading
                size_hint_y: .1
                height: dp(18)
                id: selected_report_name
                font_name: 'assets/fonts/Roboto/Roboto-Regular.ttf'


            Text:
                text: 'No selected file.'
                font_size: app.fonts.size.h6
                color: app.colors.secondary
                font_name: app.fonts.subheading
                id: reports_count
                size_hint_y: .1
                size_hint_x: .99
                font_name: 'assets/fonts/Roboto/Roboto-Regular.ttf'

            MDRaisedButton:
                id: download_source_file
                text: 'Download file'
                border: 5, 5, 5, 5
                background_color: 0.1, 0.5, 0.6, 1
                disabled: True
                height: dp(24)
                size_hint_y: .1
                size_hint: (1, .2)
            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                size_hint_y: .5
                Text:
                    text: '• Report Date: '
                    font_size: app.fonts.size.h6
                    color: app.colors.secondary
                    font_name: app.fonts.heading
                    size_hint_y: None
                    height: dp(18)
                    bold: True
                    font_name: 'assets/fonts/Roboto/Roboto-Regular.ttf'

                Text:
                    text: ''
                    font_size: app.fonts.size.h6
                    color: app.colors.secondary
                    font_name: app.fonts.subheading
                    size_hint_y: None
                    height: dp(18)
                    id: report_date
                    font_name: 'assets/fonts/Roboto/Roboto-Regular.ttf'
            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                size_hint_y: .1
                Text:
                    text: '• File Size: '
                    font_size: app.fonts.size.h6
                    color: app.colors.secondary
                    font_name: app.fonts.heading
                    size_hint_y: None
                    height: dp(18)
                    bold: True
                    font_name: 'assets/fonts/Roboto/Roboto-Regular.ttf'

                Text:
                    text: ''
                    font_size: app.fonts.size.h6
                    color: app.colors.secondary
                    font_name: app.fonts.subheading
                    size_hint_y: None
                    height: dp(18)
                    id: file_size
                    font_name: 'assets/fonts/Roboto/Roboto-Regular.ttf'



        AnchorLayout:
            size_hint_y: .50